@page
@model MovieDB.UI.Pages.Products.ProductsModel
@{
}
<h1>Products List</h1>



<div class="container py-5">
    <div class="row text-center text-white mb-5">
        <div class="col-lg-7 mx-auto">
            <h1 class="display-4">Product List</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- List group-->
            <ul class="list-group shadow">
                <!-- list group item-->
                @foreach (var product in Model.Products)
                {

                <li class="list-group-item mt-3">
                    <!-- Custom content-->
                    <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                        <div class="media-body order-2 order-lg-1">
                            <h5 class="mt-0 font-weight-bold mb-2">@product.Name</h5>
                            <p class="font-italic text-muted mb-0 small">@product.Description</p>
                            <div class="d-flex align-items-center justify-content-between mt-1">
                                <h6 class="font-weight-bold my-2">399</h6>
                                <ul class="list-inline small">
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i></li>
                                </ul>
                            </div>
                        </div><img src="@product.ImgUrl" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
                    </div> <!-- End -->
                    <a asp-page="/ShopingCart/Cart" asp-route-Id="@product.Id" class="btn btn-primary">Add To Cart</a>
                    <a asp-page="/Products/Product" asp-route-Id="@product.Id" class="btn btn-info">More Info</a>
                </li>
                    <!-- End -->
                    <!-- list group item-->
                }




            </ul> <!-- End -->
        </div>
    </div>
</div>
