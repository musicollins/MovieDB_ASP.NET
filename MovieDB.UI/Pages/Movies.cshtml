@page
@model MovieDB.UI.Pages.MoviesModel
@{
}

<h1>Movies</h1>

<div class="card-deck">

    @foreach (var movie in Model.Movies)
    {
        string MaxCharSynopsis = movie.Synopsis.Substring(0, 200);

        <div class="card" style="width: auto;">
            <img class="card-img-top" src="@movie.ImgUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@movie.Title</h5>
                <h6 class="card-title">@movie.Genre</h6>
                <p class="card-text">@MaxCharSynopsis <span>...</span></p>
                <a asp-page="/Movie" class="btn btn-primary">Back To Index</a>
            </div>
        </div>
    }
</div>
